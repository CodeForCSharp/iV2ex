<pagingex:Activity
    x:Class="iV2EX.Views.PeopleNodeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:iV2EX.Model"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pagingex="using:PagingEx"
    x:Name="PeopleNodePage"
    mc:Ignorable="d">
    <pagingex:Activity.Resources>
        <DataTemplate x:Name="NodesTemplate" x:DataType="data:NodeModel">
            <RelativePanel>
                <Image
                    Name="ImagePanel"
                    Width="40"
                    Height="40"
                    Margin="5"
                    RelativePanel.AlignLeftWithPanel="True"
                    Source="{x:Bind Image}" />
                <TextBlock
                    Name="TitlePanel"
                    Margin="10,5,0,0"
                    FontSize="16"
                    Foreground="#FF3D3D3D"
                    RelativePanel.RightOf="ImagePanel"
                    Text="{x:Bind Title}"
                    TextWrapping="Wrap" />
                <TextBlock
                    Margin="10,5,0,0"
                    FontSize="14"
                    Foreground="Gray"
                    RelativePanel.Below="TitlePanel"
                    RelativePanel.RightOf="ImagePanel"
                    Text="{x:Bind Topics}"
                    TextWrapping="Wrap" />
            </RelativePanel>
        </DataTemplate>
    </pagingex:Activity.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView
            Name="PeopleNodeList"
            IsItemClickEnabled="True"
            ItemTemplate="{StaticResource NodesTemplate}"
            SelectionMode="Single"
            ShowsScrollingPlaceholders="True" />
    </Grid>
</pagingex:Activity>